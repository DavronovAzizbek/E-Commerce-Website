<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin - Books.uz</title>
    <link rel="stylesheet" href="/style/admin.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body style="background-color: #dadae6">
    <header class="header">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="/"
            ><img src="/images/inbook.png" width="150" alt="Books.uz"
          /></a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <!-- Additional links can be added here if needed -->
            </ul>
            <form class="d-flex ms-auto">
              <a href="/login" class="btn btn-outline-danger">Exit</a>
            </form>
          </div>
        </div>
      </nav>
    </header>

    <section>
      <h1>List of authors</h1>
      <div class="tbl-header">
        <table cellpadding="0" cellspacing="0" border="0">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name and surname</th>
            </tr>
          </thead>
        </table>
      </div>
      <div class="tbl-content">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <% authors.forEach(el => { %>
            <tr>
              <td><%= el.id %></td>
              <td><%= el.fullName %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <!-- Modal trigger button -->
      <button
        type="button"
        class="btn btn-primary"
        data-bs-toggle="modal"
        data-bs-target="#addAuthorModal"
      >
      Add author
      </button>
    </section>

    <div
      class="modal fade"
      id="addAuthorModal"
      data-bs-backdrop="static"
      data-bs-keyboard="false"
      tabindex="-1"
      aria-labelledby="addAuthorModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="addAuthorModalLabel">
              Add author
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form id="authorForm" action="/postAuthor" method="post">
              <input
                required
                class="form-control mb-3"
                name="fullName"
                type="text"
                placeholder="Full name, surname"
              />
              <button type="submit" class="btn btn-success">Enter</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <section>
      <h1>Category list</h1>
      <div class="tbl-header">
        <table cellpadding="0" cellspacing="0" border="0">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
            </tr>
          </thead>
        </table>
      </div>
      <div class="tbl-content">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <% categories.forEach(el => { %>
            <tr>
              <td><%= el.id %></td>
              <td><%= el.name %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <!-- Modal trigger button -->
      <button
        type="button"
        class="btn btn-primary"
        data-bs-toggle="modal"
        data-bs-target="#addCategoryModal"
      >
      Add category
      </button>
    </section>

    <div
      class="modal fade"
      id="addCategoryModal"
      data-bs-backdrop="static"
      data-bs-keyboard="false"
      tabindex="-1"
      aria-labelledby="addCategoryModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="addCategoryModalLabel">
              Add category
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form id="categoryForm" action="/postCategory" method="post">
              <input
                required
                class="form-control mb-3"
                name="name"
                type="text"
                placeholder="Enter the name"
              />
              <button type="submit" class="btn btn-success">Enter</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <section>
      <h1>List of books</h1>
      <div class="tbl-header">
        <table cellpadding="0" cellspacing="0" border="0">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Classification</th>
              <th>Number</th>
              <th>Price</th>
              <th>Author ID</th>
              <th>Category ID</th>
              <th>Img</th>
            </tr>
          </thead>
        </table>
      </div>
      <div class="tbl-content">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <% books.forEach(el => { %>
            <tr>
              <td><%= el.id %></td>
              <td><%= el.name %></td>
              <td><%= el.desc %></td>
              <td><%= el.count %></td>
              <td><%= el.price %> sum</td>
              <td><%= el.authorId %></td>
              <td><%= el.categoryId %></td>
              <td>
                <img width="150" height="90" src="<%= el.img %>" alt="<%= el.name %>" />
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <!-- Modal trigger button -->
      <button
        type="button"
        class="btn btn-primary"
        data-bs-toggle="modal"
        data-bs-target="#addBookOrderModal"
      >
      Add a book
      </button>
    </section>

    <div
      class="modal fade"
      id="addBookOrderModal"
      data-bs-backdrop="static"
      data-bs-keyboard="false"
      tabindex="-1"
      aria-labelledby="addBookOrderModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="addBookOrderModalLabel">
              Add a book
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form id="bookOrderForm" action="/postBook" method="post">
              <input
                required
                class="form-control mb-3"
                name="name"
                type="text"
                placeholder="Enter the name"
              />
              <input
                required
                class="form-control mb-3"
                name="desc"
                type="text"
                placeholder="Enter the classification"
              />
              <input
                required
                class="form-control mb-3"
                name="count"
                type="number"
                min="1"
                max="500"
                placeholder="Insert count"
              />
              <input
                required
                class="form-control mb-3"
                name="price"
                type="number"
                min="0"
                placeholder="Enter the price"
              />
              <input
                required
                class="form-control mb-3"
                name="authorId"
                type="text"
                placeholder="Enter Author ID"
              />
              <input
                required
                class="form-control mb-3"
                name="categoryId"
                type="text"
                placeholder="Enter Category ID"
              />
              <input
                required
                class="form-control mb-3"
                name="img"
                type="text"
                placeholder="Enter the image URL"
              />
              <button type="submit" class="btn btn-success">Enter</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <section>
      <h1>List of clients</h1>
      <div class="tbl-header">
        <table cellpadding="0" cellspacing="0" border="0">
          <thead>
            <tr>
              <th>Book ID</th>
              <th>Customer Name</th>
              <th>Customer Phone</th>
              <th>How many books</th>
              <th>Address</th>
              <th>Total Price</th>
            </tr>
          </thead>
        </table>
      </div>
      <div class="tbl-content">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <% order.forEach(el => { %>
            <tr>
              <td><%= el.bookId %></td>
              <td><%= el.clientName %></td>
              <td><%= el.clientPhone %></td>
              <td><%= el.count %></td>
              <td><%= el.address %></td>
              <td><%= el.totalPrice %> sum</td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </section>

    <script>
      document
        .getElementById("logoutBtn")
        .addEventListener("click", function () {
          localStorage.removeItem("token");
          window.location.href = "/login";
        });

      window.addEventListener("unload", function () {
        localStorage.removeItem("token");
      });
    </script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
